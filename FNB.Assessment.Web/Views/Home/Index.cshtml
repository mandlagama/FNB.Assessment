@{
    ViewData["Title"] = "Change Vending Machine";
}
@model FNB.Assessment.Web.Models.ChangeViewModel
<div class="text-center">
    <h2 class="display-4">Welcome</h2>
    
</div>
@if (ViewBag.Error != null)
{
    <div style="color:red;">@ViewBag.Error</div>
}

<form asp-action="GetChange" method="post">
    <div class="row">
        <div class="column"><label for="amount">Amount (R):</label></div>
        <div class="column"><input type="number" step="0.01" id="amount" asp-for="Amount" name="amount" required /></div>
    </div>
    <div class="row">
        <div class="column"><label for="denominations">Coin Denominations:</label></div>
        <div class="column"><input type="text" step="0.01" id="denominations" asp-for="Denominations" name="denominations" required /></div>
    </div>

    <br />
    <button type="submit">Calculate Change</button>
</form>